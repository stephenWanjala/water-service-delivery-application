        android:label="@string/app_name"
        android:roundIcon="@drawable/waterdelivery_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaterDeliveryApp"
        tools:targetApi="31">
        <activity
            android:name=".CustomerActivity"
            android:exported="false" />
